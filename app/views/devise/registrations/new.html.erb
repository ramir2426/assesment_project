<div class="container">
  <div class="row login-container">
    <div class="col-md-4 center">
      <div class="grid simple form-body">
        <div class="grid-body no-border">
          <br>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="row-fluid">
              <h2>Sign Up for Resibo</h2>
              <p>Start your 14-day free trial</p>

              <div class="row form-row">
                <div class="input-append col-md-12 col-sm-12 primary">
                  <%= f.text_field :business_name, autofocus: true, class: 'form-control', placeholder: 'Company Name', required: true %>
                  </div>
              </div>

              <div class="row form-row">
                <div class="input-append col-md-12 col-sm-12 primary">
                  <%= f.text_field :contact_name, class: 'form-control', placeholder: 'Your Name', required: true %>
                  </div>
              </div>

              <div class="row form-row">
                <div class="input-append col-md-12 col-sm-12 primary">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'youremail@example.com', required: true %>
                  </div>
              </div>

              <div class="row form-row">
                <div class="input-append col-md-12 col-sm-12 primary">
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Your Password', required: true, minlength: "8" %>
                  </div>
              </div>

              <div class="row form-row">
                <div class="input-append col-md-12 col-sm-12 primary">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password', required: true, minlength: "8" %>
                  </div>
              </div>

              <div class="row form-row">
                <div class="input-append col-md-12 col-sm-12 primary">
                  <%= f.submit "SIGN UP NOW", class: 'btn btn-primary btn-cons-md' %>
                </div>
              </div>
            </div>

            <div>
              <p>By clicking 'Sign Up', you agree to the <a href='/terms'>Terms of Service</a> and <a href='/privacy'>Privacy Policy</a>.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>