<div class="page-title">
  <h3>Payments - <span class="semi-bold">Integration</span></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="grid simple">
      <!--<div class="grid-title no-border">
        <h4>Your <span class="semi-bold">Details</span></h4>
      </div>-->

      <%= form_for @account, url: account_path, method: :put, html: { multipart: true } do |f| %>
        <div class="grid-body no-border"> <br>

          <div class="row">
            <div class="col-md-8">

              <h4><strong>Braintree</strong></h4>

              <!--<a href="#">Where can I get my Braintree keys?</a><br><br>-->

              <div class="form-group">
                <label class="form-label">Merchant ID</label>
                <div class="controls">
                  <%= f.text_field :braintree_merchant_id, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <label class="form-label">Public Key</label>
                <div class="controls">
                  <%= f.text_field :braintree_public_key, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <label class="form-label">Private Key</label>
                <div class="controls">
                  <%= f.text_field :braintree_private_key, class: 'form-control' %>
                </div>
              </div>

              <% if flash[:braintree_error] %>
                <span style="color: red;">Invalid Braintree keys</span><br>
              <% end %>

              <br>
              <h4><strong>Stripe</strong></h4>

              <!--<a href="#">Where can I get my Stripe keys?</a><br><br>-->

              <div class="form-group">
                <label class="form-label">Public Key</label>
                <div class="controls">
                  <%= f.text_field :stripe_public_key, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <label class="form-label">Secret key</label>
                <div class="controls">
                  <%= f.text_field :stripe_private_key, class: 'form-control' %>
                </div>
              </div>

              <% if flash[:stripe_error] %>
                <span style="color: red;">Invalid Stripe keys</span><br>
              <% end %>

              <div class="form-actions">
                <div class="pull-right">
                  <button type="submit" class="btn btn-success btn-cons"><i class="icon-ok"></i> Save</button>
                  <a href="/" class="btn btn-white btn-cons">Cancel</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>