<%= csrf_meta_tags %>

</head>

<body class="white-body">

  <div id="header">
    <div class="col-md-9 col-center">
      <a href="/"><h2 class="pull-left no-padding no-margin">Resibo</h2></a>

      <div class="pull-right">
        <% if request.path == '/' %>
          <!--<a href="#" class="divlink" data-target="home-features">FEATURES</a>-->
          <a href="#" class="divlink" data-target="home-pricing">PRICING</a>
        <% else %>
          <!--<a href="/">FEATURES</a>-->
          <a href="/">PRICING</a>
        <% end %>
        <%= link_to 'SIGN UP', new_user_registration_path %>
        <%= link_to 'LOGIN', new_user_session_path %>
      </div>
    </div>

    <div class="clearfix"></div>
  </div>

  <div id="home-content">
    <%= yield %>
  </div>

  <div id="home-footer" class="text-center">
    <div class="col-md-9 col-center">
      <span>&copy; 2015 Resibo</span>
      <a href="/terms">Terms</a>
      <a href="/privacy">Privacy</a>
    </div>
  </div>

